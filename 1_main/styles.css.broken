    border-radius: 20px;
    padding: 32px 24px;
    width: calc(100% - 80px);
    max-width: 320px;
    text-align: center;
}

.share-modal-title {
    font-size: 20px;
    font-weight: 700;
    color: #FF4444;
    margin-bottom: 20px;
}

.share-modal-text {
    font-size: 15px;
    color: #5d5d5d;
    line-height: 1.6;
    margin-bottom: 16px;
}

.highlight-red {
    color: #FF7474;
    font-weight: 600;
}

.share-modal-question {
    font-size: 15px;
    color: #5d5d5d;
    font-weight: 600;
    margin-bottom: 24px;
}

.share-modal-buttons {
    display: flex;
    gap: 12px;
    margin-bottom: 16px;
}

.share-modal-btn-no {
    flex: 1;
    padding: 14px;
    background-color: #f5f5f5;
    border: none;
    border-radius: 10px;
    font-size: 15px;
    font-weight: 600;
    color: #666;
    cursor: pointer;
    transition: all 0.3s ease;
}

.share-modal-btn-no:active {
    background-color: #e5e5e5;
}

.share-modal-btn-yes {
    flex: 1;
    padding: 14px;
    background-color: #FF7474;
    border: none;
    border-radius: 10px;
    font-size: 15px;
    font-weight: 600;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
}

.share-modal-btn-yes:active {
    background-color: #FF5050;
}

.share-modal-note {
    font-size: 12px;
    color: #999;
    line-height: 1.5;
}

