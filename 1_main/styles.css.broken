.voice-profile-image {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    background-color: #f5f5f5;
    background-size: cover;
    background-position: center;
    position: relative;
    overflow: hidden;
}

.voice-profile-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
}

.voice-profile-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    font-size: 32px;
    border-radius: 8px;
}

.voice-profile-name {
    font-size: 13px;
    color: #666;
    font-weight: 500;
}

.voice-waveform-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.voice-waveform-icon {
    width: 80px;
    height: 80px;
    object-fit: contain;
    animation: soundPulse 2s ease-in-out infinite;
}

@keyframes soundPulse {
    0%, 100% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.1);
        opacity: 0.8;
    }
}

.voice-hearts {
    position: absolute;
    top: -5px;
    right: -5px;
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.voice-heart {
    font-size: 14px;
    animation: heartBeat 1.5s ease-in-out infinite;
}

.voice-heart:nth-child(2) {
    animation-delay: 0.3s;
}

@keyframes heartBeat {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.1);
    }
}

.voice-greeting-message {
    font-size: 15px;
    color: #666;
    line-height: 1.6;
    margin: 0;
}

