/* 메인 ?�이지???�물 ?�션 (?�단 ?�비게이??고려) */
.connections-section .gift-section {
    margin-bottom: 100px;
}

.gift-icons-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10px;
    flex-shrink: 0;
}

.gift-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    text-align: right;
    margin-top: 12px;
}

.gift-title {
    font-size: 14px;
    color: #5D5D5D;
    font-weight: 300;
    margin-bottom: 4px;
}

.gift-subtitle {
    font-size: 17px;
    color: #5D5D5D;
    font-weight: 700;
    line-height: 1.4;
    margin-bottom: 16px;
}

.gift-icon-img {
    width: 70px;
    height: 70px;
    object-fit: contain;
    transition: all 0.3s ease;
    animation: floatIcon 3s ease-in-out infinite;
}

.gift-icon-img:nth-child(1) {
    /* ?�디???�링 - ?�에 배치, ?�짝 ?�전 */
    animation-name: floatIconRotate;
    animation-delay: 0s;
    transform: rotate(-8deg);
}

.gift-icon-img:nth-child(2) {
    /* ?�스?�레???�자 - ?�기 ?�게, ?�로 ?�동 */
    animation-delay: 0.5s;
    width: 100px;
    height: 100px;
    margin-top: -25px;
}

.gift-icon-img:hover {
    transform: scale(1.1);
}

.gift-icon-img:nth-child(1):hover {
    transform: rotate(-8deg) scale(1.1);
}

@keyframes floatIcon {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-8px);
    }
}

@keyframes floatIconRotate {
    0%, 100% {
        transform: translateY(0px) rotate(-8deg);
    }
    50% {
        transform: translateY(-8px) rotate(-8deg);
    }
}

.gift-btn {
    padding: 16px 24px;
    background: linear-gradient(135deg, #FF7474 0%, #FFB4B6 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(255, 149, 149, 0.3);
    white-space: nowrap;
}

.gift-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(255, 149, 149, 0.4);
}

.gift-btn:active {
    transform: translateY(0);
}

