    height: 140px;
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.2s ease;
}

.place-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
}

.place-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.place-card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.4));
    display: flex;
    align-items: flex-end;
    padding: 16px;
}

.place-card-location {
    font-size: 18px;
    font-weight: 700;
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.place-card-favorite {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    font-size: 18px;
    color: #FF7474;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
}

.place-card-favorite:hover {
    transform: scale(1.1);
    background: white;
}

.place-card-favorite.active {
    background: #FF7474;
    color: white;
}

.place-favorite-fab {
    position: fixed;
    bottom: 180px;
    right: 20px;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, #FF7474 0%, #FF7474 100%);
    border: none;
    color: white;
    font-size: 24px;
    box-shadow: 0 4px 12px rgba(255, 116, 116, 0.4);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 100;
}

.place-favorite-fab:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(255, 116, 116, 0.5);
}

.place-favorite-fab:active {
    transform: scale(0.95);
}

.place-add-fab {
    position: fixed;
    bottom: 110px;
    right: 20px;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, #FF7474 0%, #FF7474 100%);
    border: none;
    color: white;
    font-size: 32px;
    box-shadow: 0 4px 12px rgba(255, 116, 116, 0.4);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 100;
}

.place-add-fab:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(255, 116, 116, 0.5);
}

.place-add-fab:active {
    transform: scale(0.95);
}

